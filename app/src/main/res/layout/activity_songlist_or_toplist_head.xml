<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="96dp">

        <com.jkingone.ui.widget.RoundedImageView
            android:id="@+id/iv_coverimage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginEnd="4dp"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="4dp"
            android:layout_toEndOf="@+id/iv_coverimage"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="16sp" />

        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:layout_gravity="bottom"
        android:id="@+id/tv_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:layout_margin="8dp" />

    <FrameLayout
        android:background="@drawable/shadow_rect_top_none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="播放全部"
            android:padding="8dp"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:drawableStart="@drawable/music"
            android:drawablePadding="4dp"
            android:layout_gravity="start|center_vertical"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:padding="8dp"
            android:id="@+id/tv_collect"
            android:text="收藏"
            android:textSize="16sp"
            android:drawableStart="@drawable/music"
            android:drawablePadding="4dp"
            android:layout_gravity="end|center_vertical"
            android:background="@drawable/shadow_rect_normal"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_gravity="bottom"
            android:background="@color/gray_trans"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>

    </FrameLayout>

</LinearLayout>
