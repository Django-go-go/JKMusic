<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="52dp"
    android:background="@drawable/shadow_rect_none">

    <FrameLayout
        android:id="@+id/frame_left"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:padding="4dp">

        <TextView
            android:id="@+id/tv_pos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_pic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:src="@drawable/music"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_trumpet"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:src="@drawable/music"
            android:visibility="gone" />

    </FrameLayout>

    <LinearLayout
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/frame_right"
        android:layout_toEndOf="@+id/frame_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_songName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_singer"
            android:singleLine="true"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textColor="@color/gray"
            android:textSize="12sp" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/frame_right"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_alignParentEnd="true">

        <ImageView
            android:id="@+id/iv_action"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:background="@drawable/shadow_rect_normal"
            android:src="@drawable/music"
            android:visibility="gone" />

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="8dp"
        android:background="@color/gray_trans" />

</RelativeLayout>
