<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.jkingone.customviewlib.PagerSlidingTabStrip
        android:id="@+id/pagerStrip"
        android:background="@color/colorPrimary"
        app:containerPadding="2dp"
        app:tabPadding="2dp"
        app:tabTextSize="16sp"
        app:tabTextColor="@color/white"
        app:indicatorHeight="1dp"
        app:indicatorColor="@color/white"
        app:shouldExpand="true"
        app:dividerColor="@color/transparent"
        app:underlineColor="@color/transparent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/pager_net"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

</LinearLayout>
